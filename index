    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateBtn = document.getElementById('generate-btn');
            const proposalBtn = document.getElementById('proposal-btn');
            const formSection = document.getElementById('form-section');
            const ticketSection = document.getElementById('ticket-section');
            
            generateBtn.addEventListener('click', function() {
                const name = document.getElementById('name').value.trim();
                const subject = document.getElementById('subject').value;
                const subjectText = document.getElementById('subject').options[document.getElementById('subject').selectedIndex].text;
                
                if (!name || !subject) {
                    alert('Por favor, preencha todos os campos!');
                    return;
                }
                
                // Update ticket info
                document.getElementById('ticket-name').textContent = name;
                document.getElementById('ticket-subject').textContent = subjectText;
                
                // Show ticket section
                formSection.style.display = 'none';
                ticketSection.style.display = 'block';
                
                // Show success story and proposal button only if option 2 is selected
                if (subject === '2') {
                    document.querySelector('.success-story').style.display = 'block';
                    proposalBtn.style.display = 'block';
                }
            });
            
            proposalBtn.addEventListener('click', function() {
                window.location.href = 'https://lukyammm.github.io/SGA_QUOTE/';
            });
        });
    </script>
